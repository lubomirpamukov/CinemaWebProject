@model CinemaWeb.ViewModels.Movie.MovieDetailsViewModel

<h2>@Model.Title</h2>

<p><strong>@Model.Genre:</strong> @Model.Genre</p>
<p><strong>@Model.ReleaseDate:</strong> @Model.ReleaseDate.ToString("MMMM yyyy")</p>
<p><strong>@Model.Duration:</strong> @Model.Duration minutes</p>
<p><strong>@Model.Director:</strong> @Model.Director</p>
<p><strong>@Model.Description:</strong> @Model.Description</p>
<div>
	<img src="@Model.ImageUrl" alt="Alternate Text" class="img-fluid img-thumbnail container-fluid"/>
</div>
<br />

<a asp-action="Index" class="btn btn-primary">Back to All Movies</a>
