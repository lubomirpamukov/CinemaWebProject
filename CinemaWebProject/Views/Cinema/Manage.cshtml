<h2>Manage Cinemas</h2>

<div class="mb-3">
	<a asp-controller="Cinema" asp-action="Create"class="btn btn-success">Add New Cinema</a>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Location</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var cinema in Model)
		{
			<tr>
				<td>@cinema.Name</td>
				<td>@cinema.Location</td>
				<td>
					<a asp-controller="Cinema" asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-info btn-sm">Details</a>
					<a asp-controller="Cinema" asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-primary btn-sm">Edit</a>
					<a asp-controller="Cinema" asp-action="SoftDelete" asp-route-id="@cinema.Id" class="btn btn-danger btn-sm">Delete</a>
				</td>
			</tr>	
		}
	</tbody>
</table>